<%= form_with(model: match) do |f| %>  
  <%= render "shared/errors", object: match %>

  <%= f.label :local_team_id %>
  <%= collection_select(:match, :local_team_id, Team.all,
                  :id, :name) %>

  <%= f.label :visiting_team_id %>
  <%= collection_select(:match, :visiting_team_id, Team.all,
                  :id, :name) %>

  <%= f.label :local_team_points %>
  <%= f.number_field :local_team_points, min:0 %>

  <%= f.label :visiting_team_points %>
  <%= f.number_field :visiting_team_points, min:0 %> 

  <%= f.label :started_at %>
  <%= f.datetime_field :started_at %>

  <%= f.label :ended_at %>
  <%= f.datetime_field :ended_at %>  

   <%= f.submit class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%> 
  
<% end %>