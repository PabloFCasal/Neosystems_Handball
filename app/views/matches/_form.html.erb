<div class="w-full max-w-xs">

<div class="bg-white shadow-xl rounded px-8 pt-6 pb-8 mb-4">
  
  <%= form_with(model: match) do |f| %>  
    <%= render "shared/errors", object: match %>

  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :local_team_id %>
    </div>
      <%= collection_select(:match, :local_team_id, Team.all, :id, :name) %>
    </div>

  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :visiting_team_id %>
  </div>
    <%= collection_select(:match, :visiting_team_id, Team.all, :id, :name) %>
  </div>

  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :local_team_points %>
    </div>
    <%= f.number_field :local_team_points, min:0 %>
  </div>

  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :visiting_team_points %>
    </div>
    <%= f.number_field :visiting_team_points, min:0 %> 
  </div>

  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :started_at %>
    </div>
    <%= f.datetime_field :started_at %>
  </div>
  <div class="mb-4">
    <div class="block text-gray-700 text-md font-bold mb-2">
      <%= f.label :ended_at %>
    </div>
    <%= f.datetime_field :ended_at %>  
  </div>
  <div class="mb-4">
    <%= f.submit class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %> 
  </div>
</div>
    
  <% end %>
</div>