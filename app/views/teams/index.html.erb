
<h2 class="mb-4 text-4xl font-black">Teams</h2>

<% if @teams.empty? %>
  <%= render "shared/banner", warning_text: "Please, add a new team" %>
<% else %>


  <table class="min-w-full table-auto">
    <thead class="bg-gray-800 text-gray-300" >
      <tr>
        <th>Name</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr class="border-4 border-gray-200">
        <td><%= team.name %></td>

        <td>
              <%= link_to("Edit", edit_team_path(team))%>
        </td>
        <td>
          <% if team.can_be_destroyed? %>
              <%= link_to "Delete", team_path(team), class: "button", method: :delete, data: {confirm: 'Are you sure?'} %>
          <% end %>
        </td>
      
      </tr>
    <% end %>
  </tbody>
  </table>

<% end %>
  <br>
  <%= link_to "Add new team", new_team_path, 
      class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>