<div class="bg-grey-lighter min-h-screen flex flex-col">
  <div class="bg-white px-6 py-8 rounded shadow-lg text-black w-full">

    <%= form_with(model: team) do |f| %>
      <%= render "shared/errors", object: team %>

      <div class="block text-gray-700 text-md font-bold mb-2">
        <%= f.label :name %>
      </div>
      <%= f.text_field :name %>

      <%= f.submit class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>
    <% end %>
  </div>
</div>